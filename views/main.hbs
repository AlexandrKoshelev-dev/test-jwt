<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
  </head>
  <body>
    <h1>Посты</h1>
    <ul>
      {{#each posts}}
        <div>
          <img src="{{image}}" alt="Картинка поста" width="254" height="254" />
          <p>{{text}}</p>
          <span>Автор: {{author}} </span>
          <span>Дата создания: {{date}}</span>
          {{ifCond author id}}
        </div>
      {{/each}}
    </ul>
    <form action="/post/add" method="get">
      <button>Новый пост</button>
    </form>
    <form action="/auth/logout" method="get">
      <button>Выход</button>
    </form>
  </body>
</html>